@page
@model Shop.UI.Pages.Checkout.CustomerInformationModel
@{
}
    <div class="columns">
        <div class="column is-6">

        <form method="post">


            <div class="field">

                <p class="control">
                    <label class="label">First Name</label>
                    <input asp-for="CustomerInformation.FirstName" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.FirstName "></span>

            </div>
            <div class="field">

                <p class="control">
                    <label class="label">Last Name</label>
                    <input asp-for="CustomerInformation.LastName" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.LastName"></span>

            </div>
            < <div class="field">

                <p class="control">
                    <label class="label">Phone Number</label>
                    <input asp-for="CustomerInformation.PhoneNumber" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.PhoneNumber "></span>

            </div>
            <div class="field">

                <p class="control">
                    <label class="label">Email</label>
                    <input asp-for="CustomerInformation.Email" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.Email "></span>

            </div>

            <div class="field">

                <p class="control">
                    <label class="label">Address 1</label>
                    <input asp-for="CustomerInformation.Address1" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.Address1 "></span>

            </div>
            <div class="field">

                <p class="control">
                    <label class="label">Address 2</label>
                    <input asp-for="CustomerInformation.Address2" />
                </p>
                <span class="help is-warning"></span>

            </div>
            <div class="field">

                <p class="control">
                    <label class="label">City</label>
                    <input asp-for="CustomerInformation.City" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.City "></span>

            </div>
            <div class="field">

                <p class="control">
                    <label class="label">Post Code</label>
                    <input asp-for="CustomerInformation.PostCode" />
                </p>
                <span class="help is-warning" asp-validation-for="CustomerInformation.PostCode"></span>

            </div>

            <button type="submit">Submit</button>
        </form>
        </div>
        <div class="column is-6">
            @await Component.InvokeAsync("Cart")
        </div>
    </div>